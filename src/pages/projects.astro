  .item {
    border: 2px solid rgb(37 99 235);
    border-radius: 15px;
  }

  .grid .item:nth-child(1) {
    grid-area: hero;
  }
  .grid .item:nth-child(2) {
    grid-area: aside2;
  }

  .grid .item:nth-child(3) {
    grid-area: aside3;
  }
  .grid .item:nth-child(4) {
    grid-area: aside4;
  }

